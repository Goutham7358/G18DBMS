<%= name%>
<%= splprojectvolunteerId %>

<% if(sample) { %>
    <h2>Sample Approval</h2>
    <%= splprojectgrpData.splprojectgrpId%>
    <%= splprojectgrpData.status%>
    <%= splprojectgrpData.projectname%>
    <%= splprojectgrpData.sampledescription%>
    <form action="/approvesplprojectgrp?sample=true" method="POST">
        <label for="samplefeedback"> Sample Feedback</label>
        <input type="text" name="samplefeedback" id="samplefeedback"><br>

        <input type="radio" id="approve" name="approvalStatus" value="approve">
        <label for="approve">Approve</label><br>

        <input type="radio" id="disapprove" name="approvalStatus" value="disapprove">
        <label for="disapprove">Disapprove</label><br>

        

        <input type="hidden" value="<%= splprojectgrpData.splprojectgrpId %>" name="splprojectgrpId">
        <button class="btn" type="submit">Submit Sample Approval Status</button>
</form>
<%} else {%>
    <h2>Full Approval</h2>
    <%= splprojectgrpData.splprojectgrpId%>
    <%= splprojectgrpData.status%>
    <%= splprojectgrpData.projectname%>
    <%= splprojectgrpData.sampledescription%>
    <%= splprojectgrpData.samplefeedback%>
    <%= splprojectgrpData.fulldescription%>
    <form action="/approvesplprojectgrp" method="POST">
        <label for="feedback">Full Feedback</label>
        <input type="text" name="feedback" id="feedback"><br>

        <input type="radio" id="approve" name="approvalStatus" value="approve">
        <label for="approve">Approve</label><br>

        <input type="radio" id="disapprove" name="approvalStatus" value="disapprove">
        <label for="disapprove">Disapprove</label><br>

        

        <input type="hidden" value="<%= splprojectgrpData.splprojectgrpId %>" name="splprojectgrpId">
        <button class="btn" type="submit">Submit Full Approval Status</button>
</form>

<% } %>